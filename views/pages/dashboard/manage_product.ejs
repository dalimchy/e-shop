<script>
    $('#customPaginate').pagination({
        items: totalItem,
        itemsOnPage: pageLimit,
        currentPage: currentPageNumber,
        hrefTextPrefix:'/dashboard/manage-product/',
        cssStyle: 'light-theme'
    });
