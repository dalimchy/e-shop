<%- include('../../layouts/dashboard/head') %>
<%- include('../../layouts/dashboard/topbar') %>
<%- include('../../layouts/dashboard/left_bar') %>
<link href="/admin_assets/css/simplePagination.css" rel="stylesheet" type="text/css" />

            <!-- ============================================================== -->
            <!-- Start right Content here -->
            <!-- ============================================================== -->
            <div class="content-page">
                <!-- Start content -->
                <div class="content">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-12">
                            	<div class="card-box">
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <div class="card-box table-responsive">
                                                <h4 class="header-title m-t-0 m-b-30">Product List</h4>
                                                <table class="table table-striped table-bordered dt-responsive nowrap"
                                                    cellspacing="0" width="100%">
                                                    <thead> 
                                                        <tr>
                                                            <th>P. Name</th>
                                                            <th>P. Model</th>
                                                            <th>P. Qty</th>
                                                            <th>P. Price</th>
                                                            <th>P.D.Price</th>
                                                            <th>P. Feature Img</th>
                                                            <th>P. Label</th>
                                                            <th>Status</th>
                                                            <th>Action</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                    <% _.each(product.docs,(v,k)=>{ %> 
            
                                                        <tr>
                                                            <td style="width:140px;"><%= v.product_name %></td>
                                                            <td><%= v.product_model %></td>
                                                            <td><%= v.product_qty %></td>
                                                            <td><%= v.product_price %></td>
                                                            <td><%= v.product_discount_price %></td>
                                                            <td><div style="width:100px; height:100px; border-radius:4px; padding:2px;box-sizing:border-box; background:#d8d8d8" class="text-center"><img src="/admin_assets/images/product_feature_img/<%= v.product_feature_img%>" alt="Feature Image" style="max-width:100%; max-height: 100%"></div></td>
                                                            <td><%= v.product_label %></td>
                                                            <td><%= v.product_label %></td>
                                                            <td><%= v.product_label %></td>
                                                        </tr>
                                                    <% }); %>
                                                        
                                                    </tbody>
                                                </table>
                                                <ul id="customPaginate" style="float:right"></ul>
                                            </div>
                                        </div><!-- end col -->
                                    </div>
                                    <!-- end row -->
                            	</div>
                        	</div>
                        </div>
                        <!-- end row -->

                    </div> <!-- container -->

                </div> <!-- content -->
                <footer class="footer text-right">
                    2016 - 2017 Â© Adminto.
                </footer>

            </div>


            <!-- ============================================================== -->
            <!-- End Right content here -->
            <!-- ============================================================== -->
<%- include('../../layouts/dashboard/right_bar') %>
<%- include('../../layouts/dashboard/foot') %>
<script src="/admin_assets/js/jquery.simplePagination.js"></script>

<script>
    var pageLimit = '<%= product.limit %>';
    var totalItem = '<%= product.total %>';
    var currentPageNumber = '<%= product.page %>';

    $('#customPaginate').pagination({
        items: totalItem,
        itemsOnPage: pageLimit,
        currentPage: currentPageNumber,
        hrefTextPrefix:'/dashboard/manage-product/',
        cssStyle: 'light-theme'
    });
</script>

